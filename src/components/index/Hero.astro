---
import { getI18N } from "@/i18n";
import IconChevronDown from "../../icons/IconChevronDown.astro";
import IconMoon from "../../icons/IconMoon.astro";
import IconShare2 from "../../icons/IconShare2.astro";
import IconSun from "../../icons/IconSun.astro";
import HeroButton from "../HeroButton.astro";
import LanguagePicker from "../LanguagePicker.astro";

//Para cambiar idioma de textos
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<div>
  <div class="flex justify-between">
    <img
      class="rounded-3xl size-24 border
      border-hub-border shadow-[0_0_20px_rgba(46,242,255,0.35)]
      dark:border-hub-border-dark
      dark:bg-hub-background-nav-dark
      hover:scale-[1.02]
      transition-transform duration-300 ease-out
      object-cover object-center"
      src="/img/portrait-salem.jpg"
      alt="Salem Mackintosh-Benitez portrait"
    />
    <div class="flex gap-2 flex-wrap">
      <!-- <HeroButton class="size-8">
        <IconShare2 class="size-5" />
      </HeroButton> -->

      <HeroButton aria-label="btn-theme" id="toggle-theme" class="size-8">
        <IconSun class="size-5 dark:hidden" />
        <IconMoon class="size-5 hidden dark:inline" />
      </HeroButton>

      <div class="">
        <LanguagePicker />
      </div>
    </div>
  </div>
  <div class="mt-4">
    <h1 class="font-medium text-2xl text-hub-title dark:text-hub-title-dark">
      {i18n.HERO.NAME}
    </h1>
    <p class="text-base text-hub-subtitle dark:text-hub-subtitle-dark">
      {i18n.HERO.TITLE}
    </p>
    <p class="mt-3 text-sm leading-6 text-hub-subtitle dark:text-hub-subtitle-dark">
      {i18n.HERO.DESCRIPTION}
    </p>
    <div class="mt-3 flex flex-wrap gap-2 text-xs text-hub-title dark:text-hub-title-dark">
      <span class="px-3 py-1 rounded-full border border-hub-border/60 dark:border-hub-border-dark/80 bg-hub-background-nav/70 dark:bg-hub-background-nav-dark/70">
        Via Del Web · San Diego
      </span>
      <span class="px-3 py-1 rounded-full border border-hub-border/60 dark:border-hub-border-dark/80 bg-hub-background-nav/70 dark:bg-hub-background-nav-dark/70">
        Nextcloud · Jellyfin · Mautic · HumHub · Mastodon
      </span>
    </div>
  </div>
</div>
